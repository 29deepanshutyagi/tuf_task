{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"], // Ensure this is included,
     "typeRoots": [ "./node_modules/@types", "../node_modules/@types", "../../node_modules/@types" ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  // "exclude": ["node_modules"]
}
